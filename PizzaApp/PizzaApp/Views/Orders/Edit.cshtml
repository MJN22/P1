<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserOrderAddressId" class="control-label"></label>
                <select asp-for="UserOrderAddressId" class="form-control" asp-items="ViewBag.UserOrderAddressId"></select>
                <span asp-validation-for="UserOrderAddressId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StoreAddressId" class="control-label"></label>
